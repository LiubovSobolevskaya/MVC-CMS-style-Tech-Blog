<section>  
  <h2>
    Edit Post
  </h2>
  <form id="editpost-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />      
    </div>
    <div>
      Posted by you on {{format_date post.date_created}}
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
    </div>
    <button type="submit">Save Changes</button>
    <button type="button" id="deletepost-btn">Delete Post</button>
  </form>
</section>


<script src="/editpost.js"></script>
<script src="/deletepost.js"></script>