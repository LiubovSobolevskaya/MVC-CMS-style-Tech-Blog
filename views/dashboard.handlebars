{{#if posts.length}}
<section>
  <h2> ✍ Your Posts ✍</h2>
  <ul class="posts">
    {{#each posts as |post|}}
    <li>
        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <a class="card-link" href="/dashboard/edit/{{id}}">{{title}}</a>
            </div>
          </div>
          <div class="card-body">
            {{post_text}}
          </div>
          <div class="card-footer">
            Author: {{user.username}} on {{format_date date_created}} |
            {{comments.length}} {{format_plural "comment" comments.length}}
          </div>
        </div>
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
<section>
  <h3>No posts to display</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add New Post</a></button>