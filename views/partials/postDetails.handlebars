<div class="card">
  <div class="card-header">
    <div class="card-title">
      <a class="card-link" href="/post/{{id}}">{{title}}</a>
    </div>
  </div>
  <div class="card-body">
    {{post_text}}
  </div>
  <div class="card-footer">
    Author: {{user.username}} on {{format_date date_created}} |
    {{comments.length}} {{format_plural "comment" comments.length}}
  </div>
</div>
