<div class="form-container">
<form class="login-form">
  <h2>Login</h2>
  <div>
    <label for="username-login">Username:</label>
    <input type="text" id="username-login"  placeholder="Username"/>
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" placeholder="password" />
  </div>
  <div>
    <button type="submit">Login</button>
  </div>
</form>

<form class="signup-form">
  <h2>Sign Up</h2>
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup"  placeholder="Keep it alphanumeric" />
  </div>  
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup"  placeholder="At least five characters long" />
  </div>
  <div>
    <button type="submit">Signup</button>
  </div>
</form>
<script src="/login.js"></script>